<script>
    // Fonction pour initialiser l'accordéon FAQ
    function initFaqAccordion() {
        const faqItems = document.querySelectorAll('.faq-item');
        
        faqItems.forEach(item => {
            const question = item.querySelector('.faq-question');
            
            question.addEventListener('click', () => {
                // Si l'élément est déjà actif, on le ferme
                if (item.classList.contains('active')) {
                    item.classList.remove('active');
                } else {
                    // Ferme tous les autres éléments
                    faqItems.forEach(otherItem => {
                        otherItem.classList.remove('active');
                    });
                    
                    // Ouvre l'élément cliqué
                    item.classList.add('active');
                }
            });
        });
        
        // Ouvre la première question par défaut
        if (faqItems.length > 0) {
            faqItems[0].classList.add('active');
        }
    }
    
    // Initialise l'accordéon FAQ au chargement
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initFaqAccordion);
    } else {
        initFaqAccordion();
    }
</script>
    
