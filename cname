    <!-- Script optimisé avec chargement différé et réduction des opérations DOM -->
    <script>
    // Configuration globale définie une seule fois
    const STRIPE_LINKS = {
        "500": "https://buy.stripe.com/cN2bKb1Bt7t5cykbJ0",
        "1000": "https://buy.stripe.com/9AQ6pR1Bt5kXfKw28r",
        "2000": "https://buy.stripe.com/3cs4hJ4NF6p19m8eVe",
        "3000": "https://buy.stripe.com/4gw4hJ2Fx3cPfKw14p",
        "4000": "https://buy.stripe.com/dR6bKbbc3eVxbugcN8",
        "5000": "https://buy.stripe.com/28og0r5RJ9Bd7e0eVh",
        "6000": "https://buy.stripe.com/8wM8xZbc3fZB41O6oM",
        "7000": "https://buy.stripe.com/dR6g0reofcNp7e014t",
        "8000": "https://00g8xZeof3cP8i4cNc",
        "9000": "https://buy.stripe.com/fZeeWn93V14H9m87sT",
        "10000": "https://buy.stripe.com/3cs6pRbc3eVx2XK6oQ"
    };
    
    const WEBHOOK_URL = "https://eliasse-n8n.onrender.com/webhook/e02ff554-2115-46a5-be56-48ef12324345";
    const PROMO_CODE_WEBHOOK_URL = "https://eliasse-n8n.onrender.com/webhook/db5df0fd-e71b-4e63-9ca8-3f678a78b573";
    
    // Précharge des données de prix pour le tableau
    const PRICING_DATA = [
        { count: "500", price: "€5" },
        { count: "1000", price: "€10" },
        { count: "2000", price: "€20" },
        { count: "3000", price: "€30" },
        { count: "4000", price: "€40" },
        { count: "5000", price: "€50" },
        { count: "6000", price: "€60" },
        { count: "7000", price: "€70" },
        { count: "8000", price: "€80" },
        { count: "9000", price: "€90" },
        { count: "10000", price: "€100" }
    ];
    
    // Fonction d'initialisation optimisée
    function initApp() {
        // Utilisation d'une seule fonction d'initialisation pour éviter les répétitions
        initFormHandlers();
        initLazyLoading();
        initPricingTable();
    }
    
    // Gestionnaires d'événements pour le formulaire
    function initFormHandlers() {
        const form = document.getElementById('leads-form');
        const promoCodeInput = document.getElementById('promo-code');
        const checkPromoButton = document.getElementById('check-promo');
        const promoMessage = document.getElementById('promo-message');
        const formCard = document.getElementById('form-card');
        
        // Délégation d'événements pour le formulaire
        if (form) {
            form.addEventListener('submit', handleFormSubmit);
        }
        
        // Gestionnaire de validation du code promo
        if (checkPromoButton && promoCodeInput && promoMessage) {
            checkPromoButton.addEventListener('click', () => {
                checkPromoCode(promoCodeInput.value.trim(), promoMessage, formCard);
            });
        }
    }
    
    // Gestion du chargement différé des images et iframes
    function initLazyLoading() {
        if ('IntersectionObserver' in window) {
            const lazyLoadObserver = new IntersectionObserver((entries) => {
                entries.forEach(entry => {
                    if (entry.isIntersecting) {
                        const element = entry.target;
                        if (element.dataset.src) {
                            element.src = element.dataset.src;
                            element.removeAttribute('data-src');
                        }
                        lazyLoadObserver.unobserve(element);
                    }
                });
            });
            
            // Observer les éléments avec data-src
            document.querySelectorAll('[data-src]').forEach(element => {
                lazyLoadObserver.observe(element);
            });
        } else {
            // Fallback pour les navigateurs sans IntersectionObserver
            document.querySelectorAll('[data-src]').forEach(element => {
                element.src = element.dataset.src;
            });
        }
    }
    
    // Initialisation du tableau de prix
    function initPricingTable() {
        const pricingTable = document.getElementById('pricing-table');
        if (!pricingTable) return;
        
        // Création du contenu du tableau en une seule opération DOM
        let tableHTML = '';
        
        PRICING_DATA.forEach(plan => {
            tableHTML += `
                <tr style="border-bottom: 1px solid var(--gray-200);">
                    <td style="padding: 1rem; text-align: left;"><strong>${plan.count} leads</strong></td>
                    <td style="padding: 1rem; text-align: center; color: var(--primary); font-weight: 700;">${plan.price}</td>
                    <td style="padding: 1rem; text-align: right;">
                        <button type="button" class="btn btn-primary plan-btn" data-plan="${plan.count}" style="padding: 0.5rem 1rem;">Order</button>
                    </td>
                </tr>
            `;
        });
        
        pricingTable.innerHTML = tableHTML;
        
        // Délégation d'événements pour les boutons de plan
        pricingTable.addEventListener('click', (e) => {
            const button = e.target.closest('.plan-btn');
            if (button) {
                selectPlan(button.dataset.plan);
            }
        });
    }
    
    // Fonction de soumission du formulaire
    function handleFormSubmit(e) {
        e.preventDefault();
        
        // Cache les références DOM pour éviter les requêtes DOM répétitives
        const name = document.getElementById('name').value;
        const email = document.getElementById('email').value;
        const apolloLink = document.getElementById('apollo-link').value;
        const leadsCount = document.getElementById('leads-count').value;
        const fileName = document.getElementById('file-name').value;
        const promoCode = document.getElementById('promo-code')?.value.trim() || '';
        
        if (!name || !email || !apolloLink || !leadsCount || !fileName) {
            alert('Please fill in all required fields');
            return;
        }
        
        // Préparation des données
        const formData = {
            name,
            email,
            apolloLink,
            leadsCount,
            fileName,
            promoCode,
            timestamp: new Date().toISOString()
        };
        
        // Envoi des données de façon asynchrone en parallèle avec la redirection
        const controller = new AbortController();
        const timeoutId = setTimeout(() => controller.abort(), 5000);
        
        fetch(WEBHOOK_URL, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(formData),
            signal: controller.signal
        }).catch(() => {
            // Ignorer silencieusement les erreurs de webhook
            // La redirection se fait quand même
        });
        
        // Redirection immédiate vers Stripe
        if (STRIPE_LINKS[leadsCount]) {
          // Check if the promo code applies for 100 free leads logic instead of Stripe
          // NOTE: This current logic sends to Stripe regardless of the promo code check result
          // If the promo code validation leads to a free order form, the Stripe redirect should not happen here.
          // This logic needs refinement based on the `checkPromoCode` outcome.
          // For this translation task, I'll just keep the structure as is. Potential logic bug in original JS.
          
            window.location.href = STRIPE_LINKS[leadsCount];
        } else {
            alert('Please select a valid number of leads');
        }
        
        // Nettoyage du timeout
        clearTimeout(timeoutId);
    }
    
    // Fonction optimisée pour vérifier les codes promo
    function checkPromoCode(code, messageElement, formCardElement) {
        if (!code) {
            messageElement.textContent = 'Please enter a promo code';
            messageElement.style.color = 'var(--danger)';
            return;
        }
        
        messageElement.textContent = 'Checking code...';
        messageElement.style.color = 'var(--gray-600)';
        
        fetch(PROMO_CODE_WEBHOOK_URL, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify({code: code, action: 'check'})
        })
        .then(response => {
            if (!response.ok) throw new Error('Server error');
            return response.json();
        })
        .then(data => {
            if (data.valid) {
                // This is where the promo code triggers the free leads form.
                // The main form's submit handler (handleFormSubmit) should probably not redirect to Stripe if a promo code is entered.
                // Keeping the original JS logic structure for translation purposes, but noting potential flow issue.
                showFreeLeadsForm(code, formCardElement);
            } else {
                showInvalidCodeMessage(data.error || 'Invalid code', messageElement);
            }
        })
        .catch(() => {
            messageElement.textContent = '❌ Error checking code';
            messageElement.style.color = 'var(--danger)';
        });
    }
    
    // Fonction pour afficher le formulaire de leads gratuits
    function showFreeLeadsForm(promoCode, formCard) {
        // Sauvegarde des valeurs du formulaire actuel
        const formValues = {
            name: document.getElementById('name')?.value || '',
            email: document.getElementById('email')?.value || '',
            apolloLink: document.getElementById('apollo-link')?.value || '',
            fileName: document.getElementById('file-name')?.value || ''
        };
        
        // Création du HTML pour le formulaire de leads gratuits
        formCard.innerHTML = `
            <div class="card-header">
                <h2 class="text-2xl font-bold mb-2">Order your 100 free leads</h2>
                <p class="text-gray-600">Fill out the form below to receive your verified leads for free</p>
                <div class="mt-4">
                    <span class="badge success-badge">Valid Promo Code: ${promoCode}</span>
                </div>
            </div>
            <div class="card-body">
                <form id="free-leads-form">
                    <div class="form-group">
                        <label for="free-name" class="form-label">Name *</label>
                        <input type="text" id="free-name" name="free-name" class="form-control" value="${formValues.name}" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="free-email" class="form-label">Email *</label>
                        <input type="email" id="free-email" name="free-email" class="form-control" value="${formValues.email}" required>
                        <small class="form-text">We will send your leads to this address</small>
                    </div>
                    
                    <div class="form-group">
                        <label for="free-apollo-link" class="form-label">Apollo Link *</label>
                        <input type="url" id="free-apollo-link" name="free-apollo-link" class="form-control" placeholder="https://app.apollo.io/..." value="${formValues.apolloLink}" required>
                    </div>
                    
                    <div class="form-group">
                        <label for="free-file-name" class="form-label">File Name *</label>
                        <input type="text" id="free-file-name" name="free-file-name" class="form-control" placeholder="Ex: leads_tech_france" value="${formValues.fileName}" required>
                    </div>
                    
                    <input type="hidden" id="free-promo-code" name="free-promo-code" value="${promoCode}">
                    <input type="hidden" id="free-leads-count" name="free-leads-count" value="100">
                    
                    <button type="submit" id="free-submit-button" class="btn btn-lg btn-block btn-success">
                        <i class="fas fa-paper-plane"></i> Get my 100 free leads
                    </button>
                </form>
                <div id="free-form-message" class="mt-4"></div>
            </div>
        `;
        
        // Ajouter le gestionnaire d'événement pour le nouveau formulaire
        const freeLeadsForm = document.getElementById('free-leads-form');
        if (freeLeadsForm) {
            freeLeadsForm.addEventListener('submit', handleFreeFormSubmit);
        }
    }
    
    // Fonction pour gérer la soumission du formulaire gratuit
    function handleFreeFormSubmit(e) {
        e.preventDefault();
        
        const name = document.getElementById('free-name').value;
        const email = document.getElementById('free-email').value;
        const apolloLink = document.getElementById('free-apollo-link').value;
        const fileName = document.getElementById('free-file-name').value;
        const promoCode = document.getElementById('free-promo-code').value;
        
        if (!name || !email || !apolloLink || !fileName) {
            alert('Please fill in all required fields');
            return;
        }
        
        const submitButton = document.getElementById('free-submit-button');
        const messageContainer = document.getElementById('free-form-message');
        
        // Désactiver le bouton pendant le traitement
        submitButton.disabled = true;
        submitButton.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Processing...';
        
        // Préparation des données pour le webhook
        const formData = {
            name,
            email,
            apolloLink,
            leadsCount: '100',
            fileName,
            promoCode,
            isFreeOrder: true,
            timestamp: new Date().toISOString()
        };
        
        // Envoi des données avec un timeout
        fetch(WEBHOOK_URL, {
            method: 'POST',
            headers: {'Content-Type': 'application/json'},
            body: JSON.stringify(formData)
        })
        .then(() => {
            // Redirection vers la page de confirmation
            window.location.href = "https://unlimited-leads.online/confirmation";
        })
        .catch(error => {
            messageContainer.innerHTML = `
                <div class="error-message">
                    <i class="fas fa-exclamation-circle"></i> <strong>Error:</strong> ${error.message || 'An error occurred while processing your request.'}
                </div>
            `;
            submitButton.disabled = false;
            submitButton.innerHTML = '<i class="fas fa-paper-plane"></i> Get my 100 free leads';
        });
    }
    
    // Fonction pour afficher un message d'erreur
    function showInvalidCodeMessage(errorMessage, promoMessage) {
        promoMessage.innerHTML = `
            <div class="error-message">
                <i class="fas fa-times-circle"></i> <strong>Invalid promo code:</strong> ${errorMessage}
            </div>
        `;
    }
    
    // Fonction optimisée pour sélectionner un plan
    function selectPlan(planValue) {
        const formCard = document.getElementById('form-card');
        const leadsCountSelect = document.getElementById('leads-count');
        
        // Scroll fluide jusqu'au formulaire
        if (formCard) {
            formCard.scrollIntoView({behavior: 'smooth', block: 'center'});
            
            // Sélectionner l'option dans le dropdown
            if (leadsCountSelect) {
                leadsCountSelect.value = planValue;
                
                // Focus sur le premier champ vide après le scroll
                setTimeout(() => {
                    const nameInput = document.getElementById('name');
                    if (nameInput && !nameInput.value) {
                        nameInput.focus();
                    }
                }, 800);
            }
        }
    }
    
    // Initialisation de l'application au chargement du DOM
    if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initApp);
    } else {
        initApp();
    }
    
    // Analytics différé
    window.addEventListener('load', function() {
        // Chargement différé de Google Analytics
        setTimeout(() => {
            window.dataLayer = window.dataLayer || [];
            function gtag(){dataLayer.push(arguments);}
            gtag('js', new Date());
            gtag('config', 'G-V6NTYLJ115', { 'send_page_view': true });
        }, 2000);
    });
    </script>
</body>
</html>


