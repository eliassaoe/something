            const resultArea = document.getElementById('resultArea');
            const copyBtn = document.getElementById('copyBtn');
            const previewBtn = document.getElementById('previewBtn');
            const statusMessage = document.getElementById('statusMessage');
            const variationsCount = document.getElementById('variationsCount');
            
            // Generate Spintax
            generateBtn.addEventListener('click', async function() {
                const emailText = emailInput.value.trim();
                
                if (!emailText) {
                    showStatus('Please enter your email text first.', 'error');
                    return;
                }
                
                showStatus('<span class="loader"></span> Generating spintax variations...', 'loading');
                
                try {
                    // API call to your backend
                    const response = await fetch('https://eliasse-n8n.onrender.com/webhook/1f7c3f3b-15ae-45c7-8409-c108b9eae970', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json'
                        },
                        body: JSON.stringify({ text: emailText })
                    });
                    
                    if (!response.ok) {
                        throw new Error(`Server responded with status: ${response.status}`);
                    }
                    
                    // Get the text response directly
                    const spintaxText = await response.text();
                    
                    if (spintaxText && spintaxText.trim()) {
                        spintaxResult.value = spintaxText;
                        resultArea.style.display = 'block';
                        
                        // Calculate approximate variations
                        const matches = (spintaxText.match(/{[^{}]+}/g) || []);
                        let totalVariations = 1;
                        
                        matches.forEach(match => {
                            const options = match.slice(1, -1).split('|');
                            totalVariations *= options.length;
                        });
                        
                        if (totalVariations > 1) {
                            variationsCount.textContent = `${totalVariations.toLocaleString()} possible variations`;
                        } else {
                            variationsCount.textContent = '';
                        }
                        
                        showStatus('Spintax generated successfully!', 'success');
                        
                        // Scroll to result
                        resultArea.scrollIntoView({ behavior: 'smooth' });
                    } else {
                        showStatus('No spintax was returned from the server.', 'error');
                    }
                } catch (error) {
                    console.error('Error:', error);
                    showStatus('Failed to generate spintax. Please try again.', 'error');
                }
            });
            
            // Copy to Clipboard
            copyBtn.addEventListener('click', function() {
                spintaxResult.select();
                document.execCommand('copy');
                
                const originalText = this.querySelector('span').textContent;
                this.querySelector('span').textContent = 'Copied!';
                
                setTimeout(() => {
                    this.querySelector('span').textContent = originalText;
                }, 2000);
            });
            
            // Preview Random Variation
            previewBtn.addEventListener('click', function() {
                const spintaxText = spintaxResult.value;
                
                if (!spintaxText) return;
                
                // Generate a random variation
                const randomVariation = processSpintax(spintaxText);
                
                // Show in a temporary preview
                const tempPreview = document.createElement('div');
                tempPreview.className = 'status status-success';
                tempPreview.style.marginTop = '1rem';
                tempPreview.innerHTML = ` 
                    <div style="display: flex; justify-content: space-between; margin-bottom: 0.5rem;">
                        <strong>Random Preview:</strong>
                        <span class="close-preview" style="cursor: pointer; color: var(--primary);">×</span>
                    </div>
                    <div style="white-space: pre-wrap;">${randomVariation}</div>
                `;
                
                // Remove any existing preview 
                const existingPreview = document.querySelector('.close-preview');
                if (existingPreview) {
                    existingPreview.closest('.status').remove();
                }
                
                resultArea.appendChild(tempPreview);
                
                // Close button functionality
                tempPreview.querySelector('.close-preview').addEventListener('click', function() {
                    tempPreview.remove();
                });
            });
            
            // Process spintax to generate a random variation
            function processSpintax(text) {
                // Process all spintax in the text
                let result = text;
                let match;
                const regex = /{([^{}]+)}/g;
                
                // Keep processing until all spintax is resolved
                while ((match = regex.exec(result)) !== null) {
                    const options = match[1].split('|');
                    const randomOption = options[Math.floor(Math.random() * options.length)];
                    
                    // Replace this instance of spintax with a random option
                    result = result.substring(0, match.index) + 
                             randomOption + 
                             result.substring(match.index + match[0].length);
                    
                    // Reset regex to start from the beginning since we modified the string
                    regex.lastIndex = 0;
                }
                
                return result;
            }
            
            // Status message helper
            function showStatus(message, type) {
                statusMessage.innerHTML = message;
                statusMessage.className = `status status-${type}`;
                statusMessage.style.display = 'block';
                
                if (type !== 'loading') {
                    setTimeout(() => {
                        statusMessage.style.display = 'none';
                    }, 5000);
                }
            }
            
            // Demo example
            emailInput.placeholder = "Example:\n\nSubject: Partnership opportunity with [Company Name]\n\nHi [First Name],\n\nI noticed that [Company Name] has been doing great work in the [industry] space, and I thought our solutions might complement each other well.\n\nWould you be open to a quick 15-minute call next week to explore potential synergies?\n\nBest regards,\n[Your Name]";
        });
    </script></html>
